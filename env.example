# Career Compass Environment Configuration
# Copy this file to .env and fill in your actual values

# ============================================================================
# GOOGLE GEMINI API CONFIGURATION
# ============================================================================

# Get your API key from: https://aistudio.google.com/app/apikeys
GOOGLE_API_KEY=your_google_gemini_api_key_here

# Optional: Google Custom Search Engine ID
# For real job search, set up at: https://programmablesearchengine.google.com/
GOOGLE_SEARCH_ENGINE_ID=your_search_engine_id_here

# ============================================================================
# MODEL CONFIGURATION
# ============================================================================

# Model to use (gemini-1.5-pro recommended for best reasoning)
MODEL_NAME=gemini-1.5-pro

# Temperature (0.0 = deterministic, 1.0 = creative)
# For job matching, 0.7 is good balance
TEMPERATURE=0.7

# Maximum tokens for responses
MAX_TOKENS=2048

# ============================================================================
# JOB SEARCH CONFIGURATION
# ============================================================================

# Default location for job searches
DEFAULT_LOCATION=London, ON

# Maximum search results to return
MAX_SEARCH_RESULTS=5

# Minimum compatibility score (0.0 - 1.0) for job recommendations
COMPATIBILITY_THRESHOLD=0.6

# ============================================================================
# SYSTEM CONFIGURATION
# ============================================================================

# Debug mode (True/False)
DEBUG=False

# Flask app settings (if using Flask backend)
FLASK_ENV=production
FLASK_DEBUG=False

# ============================================================================
# DEPLOYMENT CONFIGURATION
# ============================================================================

# Database connection (if using database)
# DATABASE_URL=

# Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

# ============================================================================
# NOTES
# ============================================================================

# 1. DO NOT commit .env to version control
# 2. Keep your API keys secret
# 3. For development, create local .env file
# 4. For production, use environment variables in deployment platform
# 5. Check README.md for detailed setup instructions

# ============================================================================
# OBTAINING CREDENTIALS
# ============================================================================

# GOOGLE_API_KEY:
#   1. Go to https://aistudio.google.com/app/apikeys
#   2. Click "Create API key"
#   3. Copy the generated key
#   4. Paste here

# GOOGLE_SEARCH_ENGINE_ID (optional, for real job search):
#   1. Go to https://programmablesearchengine.google.com/
#   2. Create a new search engine for job boards
#   3. Get the Search Engine ID
#   4. Paste here
#   Note: Mock data will be used if not set

